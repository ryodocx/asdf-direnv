#!/usr/bin/env bash

toolname=direnv
github_user=direnv
github_repo=direnv
required_commands="curl sed"

checkDependencies() {
    local flag=0
    for cmd in ${required_commands}; do
        if ! type ${cmd} &>/dev/null; then
            echo "required: ${cmd}"
            flag=1
        fi
    done
    if [ ${flag} = 1 ]; then
        exit 1
    fi
}

getDownloadURL() {
    case "$(uname -s)" in
    "Darwin") os="darwin" ;;
    "Linux") os="linux" ;;
    esac

    echo "https://github.com/${github_user}/${github_repo}/releases/download/${ASDF_INSTALL_VERSION}/direnv.${os}-amd64"
}
